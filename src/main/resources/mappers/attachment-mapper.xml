    <!-- Select -->
    <!-- Insert -->
	<insert id="insertProfile" parameterType="Profile">
		INSERT into PROFILE_FILE(
		<if test="memNo > 0">
			mem_no,
		</if>
		<if test="teamNo > 0">
			team_no,
		</if>
		ORIGIN_NAME,
		CHANGE_NAME,
		FILE_PATH
		)
		values(
		<if test="memNo > 0">
			#{memNo},
		</if>
		<if test="teamNo > 0">
			#{teamNo},
		</if>
		#{originName},
		#{changeName},
		#{filePath}
		)
	</insert>
	
	<!-- Update -->
	<update id="modifyProfile" parameterType="Profile">
	    UPDATE PROFILE_FILE
	    <set>
	        <if test="originName != null">
	            ORIGIN_NAME = #{originName},
	        </if>
	        <if test="changeName != null">
	            CHANGE_NAME = #{changeName},
	        </if>
	        <if test="filePath != null">
	            FILE_PATH = #{filePath},
	        </if>
	    </set>
	    <where>
	        <if test="memNo > 0">
	            MEM_NO = #{memNo} AND
	        </if>
	        <if test="teamNo > 0">
	            TEAM_NO = #{teamNo} AND
	        </if>
	        1 = 1  <!-- 항상 참이 되도록 조건을 추가 -->
	    </where>
	</update>
    
</mapper>